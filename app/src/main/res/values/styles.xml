<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!--Global style for buttons (Parent Button)-->
    <style name="GlobalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <!--Touchdown buttons (do not have marginTop) for each team (different colors)-->
    <style name="TouchdownButtonA" parent="GlobalButton">
        <item name="android:background">@color/colorSecondaryDark</item>
    </style>

    <style name="TouchdownButtonB" parent="GlobalButton">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>


    <!--Other score buttons (have marginTop) for each team (different colors)-->
    <style name="OtherButtonA" parent="GlobalButton">
        <item name="android:background">@color/colorSecondaryDark</item>
        <item name="android:layout_marginTop">@dimen/margin_between_buttons</item>
    </style>

    <style name="OtherButtonB" parent="GlobalButton">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:layout_marginTop">@dimen/margin_between_buttons</item>
    </style>

</resources>
